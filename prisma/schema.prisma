generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Books {
  Id            Int    @id(map: "PK_Books") @default(autoincrement())
  Title         String @db.NVarChar(Max)
  Author        String @db.NVarChar(Max)
  YearPublished Int
}

model Tasks {
  Id Int @id(map: "PK_Tasks") @default(autoincrement())
  Title String @db.NVarChar(Max)
  Description String @db.NVarChar(Max)
  Estatus String @db.NVarChar(Max)
}
